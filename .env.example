# Required Docker Compose values
POSTGRES_PORT=5432
POSTGRES_DB=gotest
POSTGRES_USER=gotest
POSTGRES_PASSWORD=gotest
GO_BACKEND_PORT=8080
NODE_BACKEND_PORT=3000
FRONTEND_PORT=5173

# Required Go backend runtime in compose
POSTGRES_DSN=postgres://gotest:gotest@postgres:5432/gotest?sslmode=disable

# Node backend runtime in compose
GO_BACKEND_URL=http://go-backend:8080
NODE_ENV=production
GO_REQUEST_TIMEOUT_MS=5000
GO_MAX_RESPONSE_BYTES=1048576
SHUTDOWN_TIMEOUT_MS=10000
AUTH_ENABLED=true
AUTH_USERNAME=admin
AUTH_PASSWORD=ChangeMe123@
AUTH_API_KEY=dev-local-api-key
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Frontend build-time API URL (baked into React bundle during Docker build)
VITE_API_URL=http://localhost:3000
VITE_AUTH_USERNAME=admin
VITE_AUTH_PASSWORD=ChangeMe123@
VITE_API_KEY=dev-local-api-key
VITE_ACTOR_NAME=admin
